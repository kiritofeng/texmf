\allsectionsfont{\boldmath}

\ifkiritosetup
    %%fakesection Set up author and date
    \ifkiritoauthor
        \title{}
        \author{Roger Fu}
        \date{\today}
    \fi
    %%fakesection Hyperref
    \ifkiritopkg
