    \newcommand*{\vocab}[2][]{%
        \begingroup%
        \providecommand*{\1}{#1}%
        \providecommand*{\2}{#2}%
        \renewcommand*{\1}{#1}%
        \renewcommand*{\2}{#2}%
        \ifthenelse{\isempty{#1}}{%
            \textbf{\color{blue} #2}\index{#2}%
        }{%
            \textbf{\color{blue} #2}\index{#1}%
        }%
